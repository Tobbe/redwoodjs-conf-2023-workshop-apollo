datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Artist {
  id            String  @id @default(cuid())
  name          String
  followerCount Int     @default(0)
  albums        Album[]
}

model Album {
  id       String @id @default(cuid())
  name     String
  artist   Artist @relation(fields: [artistId], references: [id])
  artistId String
}
