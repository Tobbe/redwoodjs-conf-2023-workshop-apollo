datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Artist {
  id            String  @id @default(cuid())
  name          String
  followerCount Int     @default(0)
  albums        Album[]
  tracks        Track[]
  images        Image[]
}

model Album {
  id      String   @id @default(cuid())
  name    String
  artists Artist[]
  tracks  Track[]
}

model Image {
  id      String   @id @default(cuid())
  url     String   @unique
  height  Int?
  width   Int?
  artists Artist[]
}

model Playlist {
  id     String          @id @default(cuid())
  name   String
  tracks PlaylistTrack[]
  owner  User            @relation(fields: [userId], references: [id])
  userId String
}

model PlaylistTrack {
  addedAt    DateTime
  playlist   Playlist @relation(fields: [playlistId], references: [id])
  playlistId String
  track      Track    @relation(fields: [trackId], references: [id])
  trackId    String

  @@id([playlistId, trackId])
}

model Track {
  id             String          @id @default(cuid())
  album          Album           @relation(fields: [albumId], references: [id])
  albumId        String
  artists        Artist[]
  durationMs     Int
  explicit       Boolean
  name           String
  popularity     Int             @default(0)
  trackNumber    Int
  playlistTracks PlaylistTrack[]
}

model User {
  id          String     @id @default(cuid())
  displayName String?    @unique
  playlists   Playlist[]
}
